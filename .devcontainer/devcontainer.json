{
  "name": "FastAPI Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "postCreateCommand": "uv pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "containerEnv": {
    "ENV": "development",
    "UV_CACHE_DIR": "/tmp/uv"
  }
}
